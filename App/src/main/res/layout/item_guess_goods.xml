<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLlGuess"
        android:layout_width="@dimen/dimen_dp_160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mIvGoodsPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_app_default" />

        <TextView
            android:id="@+id/mTvGoodsSketch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_F0E9D6"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_dp_10dp"
            android:paddingTop="@dimen/dimen_dp_10dp"
            android:text="商品简介"
            android:textColor="@color/color_AF9B73"
            android:textSize="@dimen/dimen_sp_13sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/mTvGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_sp_10sp"
        android:text="商品名称"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_sp_14sp" />

    <TextView
        android:id="@+id/mTvGoodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥1000"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_sp_16sp" />

</LinearLayout>