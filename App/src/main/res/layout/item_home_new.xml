<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLlNew"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F0F0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_120dp"
        android:layout_marginBottom="@dimen/dimen_dp_12dp"
        android:layout_marginTop="@dimen/dimen_dp_12dp"
        android:background="@color/color_F0E9D6">

        <TextView
            android:id="@+id/mTvNewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="周一周四·新品首发"
            android:textSize="@dimen/dimen_sp_18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mTvNewName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_dp_10dp"
            android:text="查看全部  >"
            android:textSize="@dimen/dimen_sp_12sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRlvNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:scrollbars="none" />

</LinearLayout>