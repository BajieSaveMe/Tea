<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mIvGoodsPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_app_default" />

    <TextView
        android:id="@+id/mTvGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_sp_12sp"
        android:text="商品名称"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_sp_14sp" />

    <TextView
        android:id="@+id/mTvGoodsSketch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_dp_6dp"
        android:layout_marginTop="@dimen/dimen_dp_3dp"
        android:text="商品简介"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dimen_sp_13sp" />

    <TextView
        android:id="@+id/mTvGoodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥1000"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_sp_16sp" />

</LinearLayout>